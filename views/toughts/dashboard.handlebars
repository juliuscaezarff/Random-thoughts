<div class="dashboard">
  <div class="titleContainer">
    <h2>Dashboard</h2>
    <a href="/toughts/add" class="btn">Criar Pesamentos</a>
  </div>
  <h3>Seus pensamentos</h3>
  <ul>
    {{#each toughts}}
      <li>
        <span class="label">{{this.title}}</span>
        <span class="actions">
          <a href="/" class="btn">Editar</a>
          <form action="/toughts/remove" method="post">
          <input type="hidden" name="id" value="{{this.id}}">
            <input type="submit" value="Excluir" class="btn">
          </form>
        </span>
      </li>
    {{/each}}
  </ul>
  {{#if emptyToughts}}
  <p>Ainda n√£o existe nenhum pensamento seu, comece <a href="/toughts/add">por aqui</a></p>
  {{/if}}
</div>